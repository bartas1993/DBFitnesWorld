<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

    </ScrollView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:src="@drawable/db2"
            android:layout_gravity="center"
            android:layout_width="190px"
            android:layout_height="150px"
            android:id="@+id/profile"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Username"
            android:id="@+id/user"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="1"
            android:id="@+id/level"/>
    </LinearLayout>
    <LinearLayout
        android:gravity=""
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:text="500"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:id="@+id/levelstat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWER LEVEL"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:textStyle="bold"
               android:layout_width="40dp"
               android:layout_height="wrap_content"
               android:text="1000"
               android:id="@+id/strlev"/>
           <ProgressBar
               android:layout_marginStart="40dp"
               android:layout_gravity="center"
               android:foregroundGravity="center"
               style="@style/Widget.AppCompat.ProgressBar.Horizontal"
               android:layout_width="230dp"
               android:layout_height="20dp"
               android:id="@+id/levelstrength"/>
           <TextView
               android:textStyle="bold"
               android:layout_marginStart="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Strength"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:id="@+id/speedlev"/>
            <ProgressBar
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:id="@+id/levelspeed"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:id="@+id/levendu"/>
            <ProgressBar
                android:layout_marginStart="40dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:id="@+id/levelend"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endurance"/>
        </LinearLayout>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>