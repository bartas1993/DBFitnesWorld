<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".CustomDialougeAddExercise">
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Routine:"
            android:gravity="center"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/routine"
            android:textAlignment="center"></Spinner>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Name:"
            android:gravity="center"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/exercisename"></Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reps:"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:id="@+id/minusrep"/>
                <EditText
                    android:hint="REPS"
                    android:text="0"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:id="@+id/repinput"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/plusrep"/>
            </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:id="@+id/minusweight"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:hint="KG"
                    android:text="0"
                    android:id="@+id/weigtinput"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/increaseweight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <EditText
                        android:textAlignment="center"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:hint="Add Notes"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

       <Button
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="Add Exercise"
           android:id="@+id/confirmAdd"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Complete Workout"
            android:id="@+id/addExercise"/>

    </LinearLayout>

</ScrollView>


</LinearLayout>